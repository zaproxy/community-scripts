      "response": {
        "urlToken": "{{target}}/rest/user/login",
        "headers": "\n",
        "body": "",
        "statusCode": 200,
        "responseTimeInMs": 50,
        "elementType": "ZestResponse"
      },
      "assertions": [
        {
          "rootExpression": {
            "code": 200,
            "not": false,
            "elementType": "ZestExpressionStatusCode"
          },
          "elementType": "ZestAssertion"
        }
      ],
      "followRedirects": true,
      "cookies": [],
      "index": 1,
      "enabled": true,
      "elementType": "ZestRequest"
    },
    {
      "prefix": "token\":\"",
      "postfix": "\",",
      "location": "BODY",
